  <div class='col-auto'>
    <h2>Welcome to the Dashboard, {{user.name}}!</h2>
  </div>

<div class='row mt-4'>
  <div class='col-md-6'>
    <h3>Create New blog:</h3>

    <form class='new-blog-form'>
      <div class='form-group'>
        <label for='blog-name'>blog name:</label>
        <input class="form-control" rows="3" type='text' id='blog-name' name='blog-name' />
      </div>
      
      <div class='mb-3'>
        <label for='blog-desc'>description:</label>
        <textarea class="form-control" rows="3" id='blog-desc' name='blog-desc'></textarea>
      </div>
      <div class='form-group'>
        <button  type="button" class="btn btn-outline-primary" class="new-blog-form submit" id="createButton" >CREATE</button>
      </div>
    </form>
  </div>

  {{#if blogs.length}}
    <div class='col-md-6 blog-list'>
      <h3>Current blogs:</h3>

      {{#each blogs as |blog|}}
        <div class='row mb-2'>
          <div class='col-md-8'>
            <h4><a href='/blogs/{{blog.id}}'>{{blog.name}}</a></h4>
          </div>
          <div class='col-md-4'>
            <button type="button" class="btn btn-outline-danger" data-id='{{blog.id}}' >DELETE</button>
                <button onclick="location.href='/update-blog/{{blog.id}}'"
                button type="button" class="btn btn-outline-success" button-id='{{comment.id}}' blog-id='{{../id}}' >UPDATE</button>
          </div>
        </div>
      {{/each}}
    </div>
  {{/if}}
</div>

<script src='/js/dashboard.js'></script>